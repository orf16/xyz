                                </div>
                                <div class="check01">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.EsSedePrincipal, "False", new { @class = "sedePrincipal" }) NO
                                    </label>
                                </div>
                                <label for="EsSedePrincipal" class="error" style="display:none;">Este campo es obligatorio.</label>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-3 linea02">
                                <h2>&nbsp;</h2>
                                <p>Sólo en caso negativo diligenciar la siguientes casillas sobre la sede</p>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-3 linea02">
                                <h2>Sede</h2>
                                @Html.DropDownListFor(x => x.IdSede, Model.Sedes.Select(s => new SelectListItem() { Value = s.IdSede.ToString(), Text = s.NombreSede }).ToList(), "---Sedes--", new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01">
                            <div class="col-xs-12 col-sm-6 col-md-6 linea02">
                                <h2>Dirección</h2>
                                @Html.TextBoxFor(x => x.DireccionSede, new { @class = "form-control ", @disabled = "disabled" })
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 linea02">
                                <h2>Teléfono</h2>
                                @Html.TextBoxFor(x => x.TelefonoSede, new { @class = "form-control ", @disabled = "disabled" })
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-3 linea02"></div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01">
                            <div class="col-xs-12 col-sm-6 col-md-4 linea02">
