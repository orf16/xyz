                                    <div class="check01">
                                        @Html.RadioButtonFor(x => Model.IdZonaSede, @item.Value, new { @class = "ZonasSede", @disabled = "disabled" }) @item.Text
                                    </div>
                                }
                                <label for="IdZonaSede" class="error" style="display:none;">Este campo es obligatorio.</label>
                            </div>
                        </div>
                    </div>
                    <!-- Seccion03 -->
                    <div class="col-xs-12 col-sm-12 col-md-12 seccion02">
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01" style="background-color:#7e8a97; color: white; padding-left: 3px;">
