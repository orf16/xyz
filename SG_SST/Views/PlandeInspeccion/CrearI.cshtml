                                <thead>
                                    <tr class="titulos_tabla">
                                        <th colspan="3" style="border-right: 2px solid lightslategray; border-bottom: 2px solid lightslategray; text-align:center; vertical-align:middle; text-transform:uppercase">
                                            <p>Prioridad</p>
                                        </th>
                                        <th style="border-right: 2px solid lightslategray; border-bottom: 2px solid lightslategray; text-align:center; vertical-align:middle; text-transform:uppercase">
                                            <p>Dias Desde</p>
                                        </th>
                                        <th style="border-right: 2px solid lightslategray; border-bottom: 2px solid lightslategray; text-align:center; vertical-align:middle; text-transform:uppercase">
                                            <p>Dias Hasta</p>
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>


                                    @{ var contador = 0; }
                                    @foreach (var item in Model.Configuraciones)
                                    {
                                        <tr id="@contador">
                                            <td colspan="3" style="border-right: 2px solid lightslategray; vertical-align:middle">
                                                @Html.TextBoxFor(modelItem => item.Descripcionconfiguracion, new { id = "item_Descripcionconfiguracion_" + @contador, @class = "form-control", @style = "background-color:  white;color:black", @readonly = "readonly" })
