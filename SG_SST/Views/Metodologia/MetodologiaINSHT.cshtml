                                    </td>
                                    <td><input id="Temporal" name="Temporal" type="number" class="form-control" onchange="totalDeExpuestos()" /></td>
                                    <td>
                                        <input name="Horas_De_Exposicion_Temporal" type="number" class="form-control" />
                                    </td>
                                    <td><input id="Estudiante_Pasante" name="Estudiante_Pasante" type="number" class="form-control" onchange="totalDeExpuestos()" /></td>
                                    <td>
                                        <input name="Horas_De_Exposicion_Estudiante" type="number" class="form-control" />
                                    </td>
                                    <td><input id="Visitante" name="Visitante" type="number" class="form-control" onchange="totalDeExpuestos()" /></td>
