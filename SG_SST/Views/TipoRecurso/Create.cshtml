@model SG_SST.Models.Organizacion.TipoRecurso

@{
    ViewBag.Title = "Crear Tipo de Recurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<!-- Bootstrap core CSS -->
<link href="~/Content/miga-de-pan.css" rel="stylesheet">
<!-- Referencia a botones -->
<link rel="stylesheet" href="~/Content/css/specialbuttons.css">

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Configuración Maestros</a></li>
    <li><a href="@Url.Action("Index", "TipoRecurso")">Tipo de Recurso</a></li>
    <li class="active">Crear Tipo de Recurso</li>
</ol>

@section Scripts {
    @Scripts.Render("~/bundles/Organizacion")
}

<form method="post" id="frtrecurso">
    <div class="form-horizontal">

        <h4>Tipo de Recurso</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion_Tipo_Recurso, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descripcion_Tipo_Recurso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion_Tipo_Recurso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                @*<button type="submit" class="boton botonactive" onclick="ValidarCrearTipoRecurso()">Guardar Registro</button>*@
                <button type="submit" class="boton botonactive" onclick="ValidarCrearTipoRecurso()">Guardar Registro</button> |
                <a href="@Url.Action("Index")" class="boton botoninfo">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</form>
