                                    <input type="text" class="form-control" value="@hora.ToString("hh:mm tt")" id="hora" name="hora" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="infoinspeccion">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-md-8">Seleccione Proceso :</label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.idProceso, Model.Procesos, "--Seleccione Proceso--", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-md-8">Area ó Lugar de Inspección:</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => Model.area, new { @class = "form-control", @style = "color:#7E8A97" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="infoinspeccions">
                        <div class="col-sm-6">
                            <div class="form-group  has-feedback">
                                <label class="col-md-8">Responsable Area ó Lugar de Inspección:</label>
                                <div class="col-md-12">
                                    <input type="text" name="responsable" id="responsable" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-md-8">Otros Asistentes Inspección:</label>
                                <div class="col-md-12" style="margin-left:-3%;">
                                    <div class="col-md-10" id="divSupRes" name="divSupRes">
                                        <div class="form-group" id="divv" name="divv">
                                            <div class="col-md-11" id="divasistente">
                                                <input type="text" name="asistente" id="asistente" class="form-control" />
                                            </div>
                                            <div class="col-md-1" id="divIconRes">

