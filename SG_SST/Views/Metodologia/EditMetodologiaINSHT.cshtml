                                        <td><input name="Horas_De_Exposicion_Visitante" type="number" class="form-control" value="@Model.HorasDeExposicionVisitante" /></td>
                                        <td>
                                            @{
                                                var suma = Model.PlantaDirecto + Model.Contratista + Model.Temporal + Model.EstudiantePasante + Model.Visitante;
                                            }
                                            <input id="Total" name="Total" type="number" class="form-control" value="@Convert.ToInt32(suma)" readonly />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                        <hr style="border-top-color:lightslategray" />

                        <div class="row">
