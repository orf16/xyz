                                <button type="button" class="boton botoninfo pull-right" onclick="validarCamposInformacioGeneral(3)">
                                    @SG_SST.Recursos.GeneralApp.General.btn_siguiente <span class="glyphicon glyphicon-chevron-right"></span>
                                </button>
                                @*<a onclick="validarCamposInformacioGeneral(3)" value="@SG_SST.Recursos.GeneralApp.General.btn_siguiente" class=" btn btn-siguiente btn-md pull-right">
                                        <span class="glyphicon glyphicon-chevron-right"> Siguiente</span>
                                    </a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>

