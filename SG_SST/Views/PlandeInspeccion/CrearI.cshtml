                                    <label for="fechaR" class="error" style="display:none;"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (Model.IdTipoInspeccion == 4)
                        {
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-md-8">Tipo de Elemento:</label>
                                    <div class="col-md-12">
                                        @Html.DropDownList("TipoElemento", null, htmlAttributes: new { @class = "form-control col-md-10", onChange = "jsFunction()", @style = "size:19" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-md-8">Seleccionar Elemento:</label>
                                    <div class="col-md-12">

                                        @{List<string> ListaEHM = (List<string>)ViewBag.TodosEHM;
                                        <select class="form-control col-md-10" multiple="multiple" id="ListaEHM">

                                            @{ foreach (var item in ListaEHM)
                                             {
                                                 string Valor = item;
                                                 Char delimiter = '@';
                                                 String[] substrings = Valor.Split(delimiter);
                                                <option value="@substrings[0]" tipo="@substrings[2]">@substrings[1]</option>
                                             }
                                            }

                                        </select>
                                        }

                                    </div>
                                </div>
