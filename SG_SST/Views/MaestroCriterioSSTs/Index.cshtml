@model IEnumerable<SG_SST.Models.Aplicacion.CriterioSST>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Site.css" />
<!-- Bootstrap core CSS -->
<link rel="stylesheet" href="~/Content/miga-de-pan.css" />
<!-- Referencia a botones -->
<link rel="stylesheet" href="~/Content/css/specialbuttons.css" />

<p align="center" style="margin-bottom:20px">
    @Html.ActionLink(@SG_SST.Recursos.GeneralApp.General.btn_crear_nuevo, "Create", null,
    htmlAttributes: new { @type = "button", @class = "boton botonactive" })
</p>

<div class="table-responsive">
    <table class="table table-bordered" style="border: 2px solid lightslategray">
        <tr class="titulos_tabla">
            <th style="border-right: 2px solid lightslategray; border-bottom: 2px solid lightslategray; text-align:center; vertical-align:middle; text-transform:uppercase">
                Descripción Criterio SST
            </th>
            <th style="border-right: 2px solid lightslategray; border-bottom: 2px solid lightslategray; text-align:center; vertical-align:middle; text-transform:uppercase">
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>               
                <td style="border-right: 2px solid lightslategray; vertical-align:middle">
                    @Html.DisplayFor(modelItem => item.Criterio)
                </td>
                <td style="border-right: 2px solid lightslategray; vertical-align:middle; text-align:center">
                    <a href="@Url.Action("Edit", new { id = item.PK_CriterioSST })" class="btn btn-search btn-md" title="Editar">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                   
                    @*<a data-toggle="modal" data-target="#@string.Format("modalEliminar{0}", item.PK_CriterioSST)" class="btn btn-search btn-md" title="Eliminar">
                        <span class="glyphicon glyphicon-erase"></span>
                    </a>*@
                    <a href="" data-toggle="modal" data-target="#@string.Format("modalEliminar{0}", item.PK_CriterioSST)"
                       title="Eliminar Criterio SST" class="btn btn-md btn-search">
                        <i class="glyphicon glyphicon-erase" name="iconoEliminar"></i>
                    </a>
                    <div id="@string.Format("modalEliminar{0}", item.PK_CriterioSST)" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            Modal content
                            <div class="modal-content">
                                <div class="modal-header encabezado" style="background-color:transparent; border-bottom:none">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                                    <h4 class="modal-title title">Eliminar Criterio SST</h4>
                                </div>
                                <div class="modal-body " style="text-align:center; color:black">
                                    <center><p>¿Esta seguro desea eliminar el Criterio SST seleccionado?</p></center>
                                </div>
                                <div class="modal-footer">
                                    @Html.ActionLink(SG_SST.Recursos.GeneralApp.General.btn_Eliminar, "DeleteConfirmed", new { id = item.PK_CriterioSST },
                                            htmlAttributes: new { @type = "button", @class = "boton botonactive" })
                                    <button type="button" class="boton botoncancel" data-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>