                                    @Html.DropDownListFor(x => x.IdDepartamentoEmpleado, Model.Departamentos, "---Departamentos--", new { @class = "form-control", @Style = "width: 96%;" })
                                }
                                else
                                {
                                    @Html.DropDownListFor(x => x.IdDepartamentoEmpleado, Model.Departamentos, "---Departamentos--", new { @class = "form-control bloqueado", @Style = "width: 96%;", @disabled = "disabled" })
                                }

                                @Html.HiddenFor(x => x.DepartamentoEmpleado, new { @id = "DepartamentoEmpleado" })
                            </div>
