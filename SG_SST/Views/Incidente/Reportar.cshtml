                                else
                                {
                                    @Html.TextBoxFor(x => x.Ocupacion, new { @disabled = "disabled" })
                                }

                                @Html.HiddenFor(x => x.IdOcupacion)
                            </div>

                            <div class="col-xs-12 col-sm-12 col-md-4 linea02">
                                <h2>Fecha de ingreso a la empresa</h2>
                                <div class="bootstrap-iso">
                                    <div class="container-fluid">
                                        <div class="form-group ">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(x => x.FechaIngreso, new
                                           {
                                               Value = Model.FechaIngreso.Year < 1000 ? "" : Model.FechaIngreso.ToString("dd/MM/yyyy"),
                                               placeholder = "dd/mm/aaaa",
                                               @disabled = "disabled",
                                               @class = "form-control"@*, inputtype = "datepicker"*@ })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <h2>Jornada de trabajo habitual</h2>
                            @foreach (var item in Model.Jornadas)
                            {
                                <div class="check02">
                                    @Html.RadioButtonFor(x => Model.IdJornadaHabitual, @item.Value, new { @class = "JornadaHabitual" }) @item.Text
                                </div>
                            }
                        </div>
                        <span class="error" id="errorIdJornadaHabitual" style="display:none;">Este campo es obligatorio </span>
                    </div>
                    <!-- Seccion04 -->
                    <div class="col-xs-12 col-sm-12 col-md-12 seccion02">
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01" style="background-color:#7e8a97; color: white; padding-left: 3px;">
                            <h2 class="note">III. INFORMACIÓN DEL INCIDENTE</h2>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <div class="col-xs-12 col-sm-12 col-md-3 linea02">
                                <h2>Fecha del incidente</h2>
                                <div class="bootstrap-iso">
                                    <div class="container-fluid">
                                        <div class="form-group ">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(x => x.FechaIncidente, new
                                           {
                                               Value = Model.FechaIncidente.Year < 1000 ? "" : Model.FechaIncidente.ToString("dd/MM/yyyy"),
                                               placeholder = "dd/mm/aaaa",
                                               @class = "form-control"@*, inputtype = "datepicker"*@ })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="tip-top col-xs-12 col-sm-12 col-md-2 linea02" data-toggle="tooltip" title="Valor en formato 24 horas (hh:mm)">
                                <h2>Hora del incidente</h2>
                                @Html.TextBoxFor(x => x.HoraIncidente, new { style = "padding-left: 4px", placeholder = "hh:mm" })
                                <span class="error" id="errorHoraIncidente" style="display:none;">El valor no es valido (hh:mm) </span>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-5 linea02">
                                <h2>Día de la semana en el que ocurrió el incidente</h2>
                                @foreach (var item in Model.DiasSemana)
                                {
                                    <div class="check03">
                                        @Html.RadioButtonFor(x => Model.DiaSemanaIncidente, @item.Value, new { @class = "CDiaSemanaIncidente", @disabled = "disabled" }) @item.Text
                                    </div>
                                }
                                <label for="DiaSemanaIncidente" class="error" style="display:none;">Este campo es obligatorio.</label>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-2 linea02">
                                <h2>Jornada en que sucede</h2>
                                <div class="check02">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.EsJornadaNormal, "True", new { @class = "JornadaNormal" }) Normal
                                    </label>
                                </div>
                                <div class="check02">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.EsJornadaNormal, "False", new { @class = "JornadaNormal" }) Extra
                                    </label>
                                </div>
                                <label for="EsJornadaNormal" class="error" style="display:none;">Este campo es obligatorio.</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <div class="col-xs-12 col-sm-12 col-md-4 linea02">
                                <h2>¿Estaba realizando su labor habitual?</h2>
                                <div class="check01">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.RealizabaLaborHabitual, "True", new { @class = "laborHabitual" }) SI
                                    </label>
                                </div>
                                <div class="check01">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.RealizabaLaborHabitual, "False", new { @class = "laborHabitual" }) NO
                                    </label>
                                </div>
                                <label for="RealizabaLaborHabitual" class="error" style="display:none;">Este campo es obligatorio.</label>
                                <p class="ind">¿Cual? - Diligenciar solo en caso negativo</p>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4 linea02">
                                <h2>&nbsp;</h2>
                                @Html.TextBoxFor(x => x.DescripcionLabor, new { style = "padding-left: 4px", @disabled = "disabled" })
                            </div>
                            <div class="tip-top col-xs-12 col-sm-12 col-md-4 linea02" data-toggle="tooltip" title="Valor en formato 24 horas (hh:mm)">
                                <h2>Total tiempo laborado previo al incidente</h2>
                                @Html.TextBoxFor(x => x.Incidente_tiempo_previo_al_incidente_HHMM, new { style = "padding-left: 4px", placeholder = "hh:mm" })
                                <span class="error" id="errorIncidentetiempoprevio" style="display:none;">El valor debe estar en formato de 24 horas (hh:mm) </span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <h2>Tipo de incidente</h2>
                            @foreach (var item in Model.TiposIncidente)
                            {
                                <div class="check02">
                                    @Html.RadioButtonFor(x => Model.IdTipoIncidente, @item.Value, new { @class = "cTipoIncidente" }) @item.Text
                                </div>
                            }
                        </div>
                        <span class="error" id="errorIdTipoIncidente" style="display:none;">Este campo es obligatorio </span>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <div class="col-xs-12 col-sm-6 col-md-5 linea02">
                                <h2>Departamento del incidente</h2>
                                @Html.DropDownListFor(x => x.IdDepartamentoIncidente, Model.Departamentos, "---Departamentos--", new { @class = "form-control", @Style = "width: 96%;" })
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-5 linea02">
                                <h2>Seleccione el municipio</h2>
                                @Html.DropDownListFor(x => x.IdMunicipioIncidente, Model.Municipios, "---Municipios--", new { @class = "form-control" })
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-2 linea02">
                                <h2>Zona</h2>
                                @foreach (var item in Model.Zonas)
                                {
                                    <div class="check01">
                                        @Html.RadioButtonFor(x => Model.IdZonaIncidente, @item.Value, new { @class = "ZonaIncidente" }) @item.Text
                                    </div>
                                }
                            </div>
                            <span class="error" id="errorIdZonaIncidente" style="display:none;">Este campo es obligatorio </span>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <div class="col-xs-12 col-sm-12 col-md-4 linea02">
                                <h2>Lugar donde ocurrió el incidente</h2>
                                <div class="check02">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.EsDentroEmpresa, "True", new { @class = "dondeOcurrAccidente" }) Dentro de la empresa
                                    </label>
                                </div>
                                <div class="check02">
                                    <label>
                                        @Html.RadioButtonFor(x => Model.EsDentroEmpresa, "False", new { @class = "dondeOcurrAccidente" }) Fuera de la empresa
                                    </label>
                                </div>
                                <label for="EsDentroEmpresa" class="error" style="display:none;">Este campo es obligatorio.</label>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4 linea02">
                                <h2>Indique cual sitio</h2>
                                @Html.DropDownListFor(x => x.IdSitioIncidente, Model.SitiosIncidente, "---Sitios--", new { @class = "form-control", @Style = "width: 96%;" })
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4 linea02">
                                <h2>Otro (Especifique)</h2>
                                @Html.TextBoxFor(x => x.OtroSitio, new { @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <div class="col-xs-12 col-sm-12 col-md-6 linea02">
                                <h2>Posible consecuencia</h2>
                                @Html.DropDownListFor(x => x.IdConsecuencia, Model.ConsecuenciasIncidente, "---Consecuencias--", new { @class = "form-control", @Style = "width: 96%;" })
                            </div>
                        </div>
                    </div>
                    <!-- Seccion05 -->
                    <div class="col-xs-12 col-sm-12 col-md-12 seccion02">
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01" style="background-color:#7e8a97; color: white; padding-left: 3px;">
                            <h2 class="note">IV. DESCRIPCIÓN DEL INCIDENTE</h2>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01">
                            <p class="">Describa detalladamente lo ocurrido, al igual lo que originó o causó el incidente laboral. Adicione también información específica del lugar, personas y objetos entre otros. Así mismo incluya sugerencias o recomendaciones relacionadas a la solución del evento.</p>
                            @Html.TextAreaFor(x => x.DescripcionIncidente, new { @class = "seccion4_comment" })
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 linea01">
                            <div class="col-xs-12 col-sm-12 col-md-6 linea01">
                                <h2 class="note">Fecha de diligenciamiento del incidente</h2>
                                <div class="bootstrap-iso">
                                    <div class="container-fluid">

                                        <div class="form-group ">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(x => x.FechaCreacionIncidente, new { Value = Model.FechaCreacionIncidente.Year < 1000 ? "" : Model.FechaCreacionIncidente.ToString("dd/MM/yyyy"), placeholder = "dd/mm/aaaa", @class = "form-control", @disabled = "disabled" })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-6 linea01"></div>
                        </div>
                    </div>
                    <!-- Seccion06-Botones -->
                    <div class="col-xs-12 col-sm-12 col-md-12 seccion03">
                        <button class="boton botoninfo" type="button" id="btnDescargar">Descargar</button>
                        <button class="boton botonactive" type="button" id="btnguardar">Guardar</button>
                        <button class="boton botoninfo" type="button" id="Imprimir">Imprimir</button>
                        <button class="boton botoninfo" type="button" id="Nuevoreporte">Nuevo Reporte</button>
                    </div>
                    <div style="text-align:center">
                        <span class="error" id="errorform" style="display:none;">Aún faltan campos por diligenciar, por favor verifique. </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
