@model SG_SST.Models.EstudioPuestoTrabajo.SeguimientoEstudioPTModel

<form id="form_seguimiento">
    <div class="panel panel-default" style="background-color: rgba(196, 202,196, 0.1)">
        <div class="panel-heading" style="color:black">
            SEGUIMIENTO O RECOMENDACIONES
        </div>
    </div>
    <div class="panel-body form-horizontal">
        <div class="row form-group">
            <div class="col-md-2">
                @Html.Label("Actividad", new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.TextAreaFor(x => x.Actividad, new { @class = "form-control" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.Label("Fecha", new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Fecha, new { Value = Model.Fecha.Year < 1000 ? "" : Model.Fecha.ToString("dd/MM/yyyy"), placeholder = "dd/mm/yyyy", @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.Label("Responsable", new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Responsable, new { @class = "form-control" })
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="row text-center">
                    <button type="button" formmethod="post" id="btnNuevoSeguimiento" class="boton botonactive col-margin">AGREGAR</button>
                </div>
            </div>
        </div>
    </div>
</form>
@Scripts.Render("~/Scripts/jquery.validate.min.js")
@Scripts.Render("~/Scripts/EstudioPuestoTrabajo/NuevoSeguimiento.js")

