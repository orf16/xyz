@model SG_SST.Models.Empresas.Proceso

@{
    ViewBag.Title = "Editar Procesos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var process = ViewBag.Fk_Id_Proceso;
}

<link href="~/Content/Site.css" rel="stylesheet" />
<!-- Bootstrap core CSS -->
<link href="~/Content/miga-de-pan.css" rel="stylesheet">
<!-- Referencia a botones -->
<link rel="stylesheet" href="~/Content/css/specialbuttons.css">

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Empresa</a></li>
    <li><a href="javascript:void(0)">Gobierno Organizacional</a></li>
    <li><a href="@Url.Action("MenuProcesos","Proceso")">Gestión Procesos Empresa</a></li>
    <li class="active">Editar Procesos</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default" style="background-color: rgba(196, 202,196, 0.1)">
        <div class="panel-heading" style="color:white">EDITAR PROCESOS</div>
        <div class="panel-body form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Pk_Id_Proceso)


            <div class="form-group">
                @Html.LabelFor(model => model.Fk_Id_Proceso, "Editar Proceso Padre:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownList("Fk_Id_Proceso", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Fk_Id_Proceso, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.Descripcion_Proceso, "Editar Proceso:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @*<input type="text" class="form-control" value="@Model.Descripcion_Proceso"/>*@
                    @Html.EditorFor(model => model.Descripcion_Proceso, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion_Proceso, "", new { @class = "text-danger" })
                </div>
            </div>

         
            <hr />

            <div class="row" align="center">
                <div class="form-group">
                    @*<div class="col-sm-2">*@
                    <button type="submit" class="boton botonactive">Guardar Cambios</button>

                    <a href="@Url.Action("Index","Proceso") " class="boton botoninfo" style="margin-left:5%">Listado Procesos</a>
                    @*</div>*@
                    @*<div class="col-sm-2">*@
                    @*<input type="submit" value="Guardar Cambios" class="btn btn-primary" />*@

                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
}
