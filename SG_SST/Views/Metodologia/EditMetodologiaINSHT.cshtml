                            </div>
                        </div>
                        <hr style="border-top-color:lightslategray" />
                        <div class="row">
                            <h3 style="margin-left:15px"><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_step_numero_de_expuestos</b></h3>
                        </div>
                        <div class="row">
                            <table class="table table-condensed table-responsive table-hover table-bordered" style="border: 2px solid lightslategray; margin-left:15px">
                                <thead>
                                    <tr class="titulos_tabla">
                                        <th colspan="2" style="border: 2px solid lightslategray; text-align:center">Planta/directos</th>
                                        <th colspan="2" style="border: 2px solid lightslategray; text-align:center">Contratistas</th>
                                        <th colspan="2" style="border: 2px solid lightslategray; text-align:center">Temporales</th>
                                        <th colspan="2" style="border: 2px solid lightslategray; text-align:center">Estudiantes/Pasantes</th>
                                        <th colspan="2" style="border: 2px solid lightslategray; text-align:center">Visitantes</th>
                                        <th style="border: 2px solid lightslategray; text-align:center">Total</th>
                                    </tr>
                                    <tr class="titulos_tabla">
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Cantidad</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Horas Exposicion día</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Cantidad</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Horas Exposicion día</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Cantidad</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Horas Exposicion día</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Cantidad</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Horas Exposicion  día</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Cantidad</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle">Horas Exposicion día</th>
                                        <th style="border: 2px solid lightslategray; vertical-align:middle"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="titulos_filas">
                                        <td><input id="Planta_Directo" name="Planta_Directo" type="number" class="form-control" value="@Model.PlantaDirecto" onchange="totalDeExpuestos()" /></td>
                                        <td><input name="Horas_De_Exposicion_Planta" type="number" class="form-control" value="@Model.HorasDeExposicionPlanta" /></td>
                                        <td><input id="Contratista" name="Contratista" type="number" class="form-control" value="@Model.Contratista" onchange="totalDeExpuestos()" /></td>
                                        <td><input name="Horas_De_Exposicion_Contratista" type="number" class="form-control" value="@Model.HorasDeExposicionContratista" /></td>
                                        <td><input id="Temporal" name="Temporal" type="number" class="form-control" value="@Model.Temporal" onchange="totalDeExpuestos()" /></td>
                                        <td><input name="Horas_De_Exposicion_Temporal" type="number" class="form-control" value="@Model.HorasDeExposicionTemporal" /></td>
                                        <td><input id="Estudiante_Pasante" name="Estudiante_Pasante" type="number" class="form-control" value="@Model.EstudiantePasante" onchange="totalDeExpuestos()" /></td>
