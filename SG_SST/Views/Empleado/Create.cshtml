@model SG_SST.Models.Empleado.tblEmpleado

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-0">
        <div class="panel panel-yellow">
            <div class="panel-heading"><p class="text-center">CONSULTA DE TRABAJADORES </p></div>


            @using (Html.BeginForm())
            {
              

                    <div class="form-group">
                        @Html.LabelFor(model => model.FK_ID_Estado, "FK_ID_Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("FK_ID_Estado", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FK_ID_Estado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                <hr/>
                
                    <div class="form-group">
                        @Html.LabelFor(model => model.FK_ID_Tipo_Cotizante, "FK_ID_Tipo_Cotizante", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("FK_ID_Tipo_Cotizante", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FK_ID_Tipo_Cotizante, "", new { @class = "text-danger" })
                        </div>
                    </div>

                
                
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
               
            }

            <div>
                @Html.ActionLink("Regresar", "Index")
            </div>
        
    </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
