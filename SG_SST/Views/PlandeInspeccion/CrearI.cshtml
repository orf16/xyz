                                            </td>
                                            <td style="border-right: 2px solid lightslategray; vertical-align:middle; text-align:center">
                                                @Html.TextBoxFor(modelItem => item.diasdesde, new { id = "item_diasdesde_" + @contador, @class = "form-control", @style = "background-color: white;color:black", required = "required" })
                                                <label for="diasdesde" class="error" style="display:none;"></label>
                                            </td>
                                            <td style="border-right: 2px solid lightslategray; vertical-align:middle; text-align:center">
                                                @Html.TextBoxFor(modelItem => item.diashasta, new { id = "item_diashasta_" + @contador, @class = "form-control", @style = "background-color:  white;color:black", required = "required" })
                                                <label for="diashasta" class="error" style="display:none;"></label>
                                            </td>

                                            @Html.HiddenFor(modelItem => item.idconfiguracion, new { id = "item_idconfiguracion_" + @contador })

                                        </tr>
                                        contador++;
                                    }
