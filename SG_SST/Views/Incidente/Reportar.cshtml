                                }
                                <label for="IdTipoDocumentoEmpleado" class="error" style="display:none;">Este campo es obligatorio.</label>
                                @Html.HiddenFor(x => x.TipoDocumentoEmpleado, new { @id = "TipoDocumentoEmpleado" })
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 linea02">
                                <h2>Número</h2>
                                @if (string.IsNullOrEmpty(Model.DocumentoEmpleado))
                                {
                                    @Html.TextBoxFor(x => x.DocumentoEmpleado)
                                }
                                else
                                {
                                    @Html.TextBoxFor(x => x.DocumentoEmpleado, new { @disabled = "disabled" })
                                }
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 linea02">
                                <h2>Primer Apellido</h2>
                                @if (string.IsNullOrEmpty(Model.PrimerApellido))
                                {
                                    @Html.TextBoxFor(x => x.PrimerApellido)
                                }
                                else
                                {
                                    @Html.TextBoxFor(x => x.PrimerApellido, new { @disabled = "disabled" })
                                }
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-3 linea02">
                                <h2>Segundo Apellido</h2>
                                @Html.TextBoxFor(x => x.SegundoApellido, new { @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 seccion01">
                            <div class="col-xs-12 col-sm-6 col-md-3 linea02">
                                <h2>Primer Nombre</h2>
                                @if (string.IsNullOrEmpty(Model.PrimerNombre))
                                {
                                    @Html.TextBoxFor(x => x.PrimerNombre)
                                }
                                else
                                {
                                    @Html.TextBoxFor(x => x.PrimerNombre, new { @disabled = "disabled" })
                                }
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-3 linea02">
