@model SG_SST.Models.Aplicacion.MaestroTipoInspeccion

@{
    ViewBag.Title = "Editar Tipo de Inspección";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/Aplicacion")
}

<link rel="stylesheet" href="~/Content/Site.css" />
<!-- Bootstrap core CSS -->
<link rel="stylesheet" href="~/Content/miga-de-pan.css" />
<!-- Referencia a botones -->
<link rel="stylesheet" href="~/Content/css/specialbuttons.css" />

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Configuración Maestros</a></li>
    <li><a href="javascript:void(0)">Tipos de Inspección</a></li>
    <li class="active">Editar Tipo de Inspección</li>
</ol>

<form id="forconfiprio" method="post">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h4>Tipo de Inspección</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Pk_Id_Maestro_Tipo_Inspeccion)

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion_Tipo_Inspeccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descripcion_Tipo_Inspeccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion_Tipo_Inspeccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                <button type="submit" class="boton botonactive" id="btnEnviar" onclick="ValidarCrearMaestro()">Guardar</button>
                |
                <a href="@Url.Action("Index")" class="boton botoninfo">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</form>
