@using (Html.BeginForm("CargarArchivo", "Politicasst", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="panel panel-default" style="background-color: rgba(196, 202,196, 0.1)">
        <div class="panel-heading" style="color:white">Cargar Política de Seguridad y Salud en el Trabajo</div>
            
        @*Boton ayuda*@
        <div align="right">
            <div id="ayuda" style="text-align:right">
                <a href="" data-toggle="modal" data-target="#@string.Format("modalAyuda")"
                    title="Ayuda" class="btn btn-ayuda btn-md">
                    <i class="glyphicon glyphicon-question-sign"></i>
                </a>
                <div id="@string.Format("modalAyuda")" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header encabezado" style="background-color:transparent; border-bottom:none">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    @*<span aria-hidden="true">&times;</span>*@
                                </button>
                                <h4 class="modal-title title">Ayuda / Cargar Política</h4>
                            </div>
                            <div class="modal-body" style="color:black">

                                <div style="text-align:justify">
                                    En esta función podrá cargar una política ya existente de su SGSST, adjuntando el archivo correspondiente usando la opción “seleccionar archivo”. Esta le permitirá navegar por sus archivos de equipo, USB, o discos externos de almacenamiento, y seleccionar el archivo buscado. Finalice dando clic en <button class="boton botonactive" disabled>Cargar</button>
                                </div>
                                <br />
                                <div style="text-align:justify">
                                    El archivo se presentara a manera de repositorio y podrá visualizarlo y descargarle cuando considere.
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="boton botoncancel" data-dismiss="modal">Salir</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-body form-horizontal">
            <div class="row">
                <div class="col-md-4 col-md-offset-2">
                    <input type="file" value="Cargar Politica" name="ArchivoPolitica" class="form-control" />
                </div>

                <div class="col-md-offset-3">
                    @*<input type="submit" value="Cargar" class="btn btn-warning" width=50 heigth=50 />*@
                    <button type="submit" class="boton botonactive">Cargar</button>
                </div>
            </div>
        </div>
    </div>
    
    @*<div class="col-sm-3">
        <a href="@Url.Action("MenuPolitica", "Politicasst")" class="btn btn-default btn-md"> <span class="glyphicon glyphicon-home"></span></a>
        @Html.ActionLink(" Regresar", "MenuPolitica")
    </div>*@
 
}
