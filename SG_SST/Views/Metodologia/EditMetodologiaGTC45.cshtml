                                <h5><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cual:</b></h5>
                            </div>
                            <div class="col-md-10">
                                <input name="Otro" type="text" class="form-control" value="@Model.Otro" />
                            </div>
                        </div>
                        <br />
                        <div class="row" id="inputClasificacion">
                            <div class="col-md-2">
                                <h5><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_descripcion:</b></h5>
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("FK_Clasificacion_De_Peligro", null, htmlAttributes: new { @class = "form-control" }, optionLabel: "Seleccionar")
                                <input type="hidden" id="clasificacionPeligros" value="@Model.idDescripcion" />
                                @*<select id="FK_Clasificacion_De_Peligro" name="FK_Clasificacion_De_Peligro" class="form-control"></select>*@
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            @if (Model.FLG_Higienico)
                            {
                                <div class="col-md-5">
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="true" id="FLG_Higienico" name="FLG_Higienico" onchange="MostrarTipoCalificacion(this)" checked><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_calificar_como_higienico</b></label>
                                    </div>
                                </div>
                                <div class="col-md-4" id="RadioBtnTipoCalificacion">
                                    @if (Model.FLG_Tipo_De_Calificacion)
                                    {
                                        @*<fieldset class="radiogroup">*@
                                            <div class="radio">
                                                <div>
                                                    <label><input type="radio"  name="FLG_Tipo_De_Calificacion" value="false" onchange="ConsultarNivlesDeDeficiencia(this)"><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cualitativo</b></label>
                                                </div>
                                                <div>
                                                    <label><input type="radio" id="flg_tipo_de_calificacion2"  name="FLG_Tipo_De_Calificacion" value="true" onchange="ConsultarNivlesDeDeficiencia(this)" checked><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cuantitativo</b></label>
                                                </div>
                                            </div>
                                        @*</fieldset>*@
                                    }
                                    else
                                    {
                                        <fieldset class="radiogroup">
                                            <div class="radio">
                                                <div>
                                                    <label><input type="radio" name="FLG_Tipo_De_Calificacion" value="false" onchange="ConsultarNivlesDeDeficiencia(this)" checked><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cualitativo</b></label>
                                                </div>
                                                <div>
                                                    <label><input type="radio" id="flg_tipo_de_calificacion2"  name="FLG_Tipo_De_Calificacion" value="true" onchange="ConsultarNivlesDeDeficiencia(this)"><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cuantitativo</b></label>
                                                </div>
                                            </div>
                                        </fieldset>
                                    }

                                </div>
                            }
                            else
                            {
                                <div class="col-md-5">
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="true" id="FLG_Higienico" name="FLG_Higienico" onchange="MostrarTipoCalificacion(this)" checked><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_calificar_como_higienico</b></label>
                                    </div>
                                </div>
                                <div class="col-md-4" hidden="hidden" id="RadioBtnTipoCalificacion">
                                    <fieldset class="radiogroup">
                                        <div class="radio">
                                            @if (Model.FLG_Tipo_De_Calificacion) { }
                                            <div>
                                                <label><input type="radio" name="FLG_Tipo_De_Calificacion" value="false" onchange="ConsultarNivlesDeDeficiencia(this)" /><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cualitativo</b></label>
                                            </div>
                                            <div>
                                                <label><input type="radio" id="flg_tipo_de_calificacion2" name=" flg_tipo_de_calificacion" value="true" onchange="ConsultarNivlesDeDeficiencia(this)" /><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_cuantitativo</b></label>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            }

                        </div>
                        <br />
