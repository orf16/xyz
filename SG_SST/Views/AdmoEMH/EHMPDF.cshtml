@model SG_SST.EntidadesDominio.Aplicacion.EDAdmoEMH
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: black;
        }


        .Unalinea {
            display: inline-block;
            width: 100%;
        }

        .TipoCss {
            font-size: 20px;
            float: left;
            width: 45%;
            background-color: none;
            padding: 0px;
        }

            .TipoCss > input {
                font-size: 20px;
            }

        .IDCss {
            font-size: 20px;
            float: left;
            width: 55%;
            background-color: none;
            padding: 0px;
        }

            .IDCss label {
                font-size: 20px;
            }

            .IDCss input {
                font-size: 20px;
                color: black;
                text-align: left;
                max-width: 150px;
            }

            .IDCss div {
                float: left;
                margin-right: 30px;
            }

        .Doslinea {
            width: 100%;
            background-color: none;
            border: solid #bfbbce 1px;
            padding: 0px;
            font-size: 17px;
            page-break-inside: avoid !important;
        }

            .Doslinea .SubTitulo {
                background-color: #8a8a8a;
                margin: 0px;
                padding-left: 5px;
                margin: 0px 0px 2px 0px;
            }

            .Doslinea input {
                width: 400px;
            }

        .AccionInline {
            display: inline-block;
            width: 100%;
            margin: 0px;
            padding-left: 5px;
        }

        .AccionLeft49 {
            float: left;
            width: 49.5%;
        }

        .AccionLeft50 {
            float: left;
            width: 50%;
        }
        .AccionLeft98 {
            float: left;
            width: 98%;
        }
        .AccionLeft100 {
            float: left;
            width: 100%;
        }

        textarea {
            width: 98%;
            outline: none;
            border: solid 1px gray;
            text-align: justify;
            overflow: hidden;
        }

        .breakhere {
            page-break-after: always;
        }

        .datagrid table {
            border-collapse: collapse;
            width: 100%;
            border: 1px solid #ddd;
            text-align: left;
        }

            .datagrid table td {
                border: 1px solid #ddd;
                text-align: left;
            }

            .datagrid table th {
                border: 1px solid #ddd;
                text-align: left;
            }

            .datagrid table tbody tr td {
                padding: 5px;
            }

            .datagrid table thead tr th {
                text-align: center;
            }

            .datagrid table thead tr th {
                text-align: center;
                padding-left: 3px;
                padding-right: 3px;
            }

            .datagrid table thead {
                background-color: #a3a3a3;
                color: black;
            }

            .datagrid table tbody tr .TdJustificar {
                text-align: justify !important;
                max-width: 500px;
            }

            .datagrid table tbody tr .TdCentrar {
                text-align: center !important;
            }

        input[type=text] {
            outline: none;
            border: solid 1px gray;
        }

        tr, td {
            page-break-inside: avoid !important;
        }

        .imagenEHM {
            page-break-inside: avoid !important;
        }
    </style>
</head>

<body>
    <div class="Doslinea">
        <div class="SubTitulo">
            <b>1. Información del Elemento</b>
        </div>
        <div class="AccionInline">
            <div class="AccionLeft100">
                <div>
                    <b>Tipo del Elemento</b>
                    <div>
                        @Html.DisplayFor(m => m.TipoElemento)
                    </div>

                </div>
            </div>
        </div>
        <div class="AccionInline">
            <div class="AccionLeft100">
                <div>
                    <b>Nombre del Elemento</b>
                    <div>
                        @Html.DisplayFor(m => m.NombreElemento)
                    </div>

                </div>
            </div>
        </div>        
        <div class="AccionInline">
            <div class="AccionLeft49">
                <div>
                    <b>Código del Elemento</b>
                    <div>
                        @Html.DisplayFor(m => m.CodigoElemento)
                    </div>
                </div>
            </div>
            <div class="AccionLeft49">
                <b>Marca</b>
                <div>
                    @Html.DisplayFor(m => m.Marca)
                </div>
            </div>
        </div>
        <div class="AccionInline">           
            <div class="AccionLeft49">
                <b>Modelo</b>
                <div>
                    <div>
                        @Html.DisplayFor(m => m.Modelo)
                    </div>
                </div>
            </div>
            <div class="AccionLeft49">
                <b>Fabricante</b>
                <div>
                    @Html.DisplayFor(m => m.Fabricante)
                </div>
            </div>
        </div>
        <div class="AccionInline">
            
            <div class="AccionLeft49">
                <b>Fecha de Fabricación</b>
                <div>
        <div>

        @{
            string Fecha_str = "";
            try
            {
                Fecha_str = Model.Fecha_Fab.ToString("dd/MM/yyyy");
            }
            catch (Exception)
            {

            }
            <span>@Fecha_str</span>
            @*@Html.TextBox(Fecha_str, Fecha_str)*@
        }

    </div>
                </div>
            </div>
            <div class="AccionLeft49">
                <b>Horas de Vida Útil</b>
                <div>
                    <div>
                        @{
                            int HorasVida = Model.HorasVida;
                            String s = String.Format("{0:n0}",
                         HorasVida);
                            s = s.Replace(",", ".");
                            <span>@s</span>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="AccionInline">
            
            <div class="AccionLeft49">
                <b>Ubicación</b>
                <div>
                    @Html.DisplayFor(m => m.Ubicacion)
                </div>
            </div>
        </div>
        <div class="AccionInline">

            <div class="AccionLeft98" style="text-align:justify;">
                <b>Características</b>
                <div>
                    @Html.DisplayFor(m => m.Caracteristicas)
                </div>
            </div>
        </div>
    </div>
    <div class="Doslinea">
        <div class="SubTitulo">
            <b>2. Información del Responsable</b>
        </div>
        <div class="AccionInline">
            <div class="AccionLeft100">
                <div>
                    <b>Nombre del Responsable</b>
                    <div>
                        @Html.DisplayFor(m => m.NombreResponsable)
                    </div>

                </div>
            </div>
        </div>
        <div class="AccionInline">
            <div class="AccionLeft100">
                <div>
                    <b>Cargo del Responsable</b>
                    <div>
                        @Html.DisplayFor(m => m.CargoResponsable)
                    </div>

                </div>
            </div>
        </div>
    </div>
    
    @{
        <div class="Doslinea">
            <div class="SubTitulo">
                <b>3. Riesgos Asociados</b>
            </div>

            <div>
                @{
                    <div class="datagrid">
                        <table>
                            <thead style="font-size:14px;">
                                <tr>
                                    <th>
                                        <p>Proceso</p>
                                    </th>
                                    <th >
                                        <p>Clasificación de Peligro</p>
                                    </th>
                                    <th>
                                        <p>Eliminación</p>
                                    </th>
                                    <th>
                                        <p>Sustitución</p>
                                    </th>
                                    <th>
                                        <p>Controles de Ingeniería</p>
                                    </th>
                                    <th>
                                        <p>Controles Administrativos</p>
                                    </th>
                                    <th>
                                        <p>Elementos de Protección Personal</p>
                                    </th>
                                </tr>
                            </thead>
                            <tbody style="font-size:13px;">
                                @{
                                    List<string> LProceso = ViewBag.ListaProcesosP;
                                    List<string> LClas = ViewBag.ListaClasificacionP;
                                    int cont = 0;
                                    foreach (var item in Model.ListaPeligros)
                                    {
                                        <tr>
                                            <td>
                                                <span><b>@LProceso[cont]</b></span>
                                            </td>
                                            <td>
                                                <span><b>@LClas[cont]</b></span>
                                            </td>
                                            <td>
                                                <span><b>@item.Eliminacion</b></span>
                                            </td>
                                            <td>
                                                <span><b>@item.Sustitucion</b></span>
                                            </td>
                                            <td>
                                                <span><b>@item.Controles_De_Ingenieria</b></span>
                                            </td>
                                            <td>
                                                <span><b>@item.Controles_Administrativos</b></span>
                                            </td>
                                            <td>
                                                <span><b>@item.Elementos_De_Proteccion</b></span>
                                            </td>
                                        </tr>
                                        cont++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>


                }
            </div>
        </div>
    }

    @{
        if (Model.Motivo_Baja != null && Model.Fecha_Baja != null && Model.Estado == 1)
        {
            string Motivo = Model.Motivo_Baja;
            string Fecha_baja = "";
            DateTime FechaB = Model.Fecha_Baja ??  DateTime.Today;
            try
            {
                Fecha_baja = FechaB.ToString("dd/MM/yyyy");
            }
            catch (Exception)
            {

            }


            <div class="Doslinea">
                <div class="SubTitulo">
                    <b>4. Información de Estado</b>
                </div>
                <div class="AccionInline">
                    <div class="AccionLeft100">
                        <div>
                            <b>Motivo de Baja</b>
                            <div>
                                @Html.DisplayFor(m => m.Motivo_Baja)
                            </div>

                        </div>
                    </div>
                </div>
                <div class="AccionInline">
                    <div class="AccionLeft100">
                        <div>
                            <b>Fecha Cambio de Estado</b>
                            <div>
                                @Html.Label("StudentName", Fecha_baja)
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        }
    }
	@{
        <div class="Doslinea">
            <div class="SubTitulo">
                <b>4. Documentación Anexa</b>
            </div>

            <div>
                @{
                    <div class="datagrid">
                        <table>
                            <thead style="font-size:14px;">
                                <tr>
                                    <th>
                                        <p>Nombre Documento</p>
                                    </th>
                                </tr>
                            </thead>
                            <tbody style="font-size:13px;">
                                @{
                                    if (@Model.Filedownload1 != null)
                                    {
                                        if (@Model.Filedownload1 != "")
                                        {
                                            <tr>
                                                <td>
                                                    <span><b>@Model.Filedownload1</b></span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    if (@Model.Filedownload2 != null)
                                    {
                                        if (@Model.Filedownload2 != "")
                                        {
                                            <tr>
                                                <td>
                                                    <span><b>@Model.Filedownload2</b></span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    if (@Model.Filedownload3 != null)
                                    {
                                        if (@Model.Filedownload3 != "")
                                        {
                                            <tr>
                                                <td>
                                                    <span><b>@Model.Filedownload3</b></span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    }
                                
                            </tbody>
                        </table>
                    </div>


                }
            </div>
        </div>
    }
    
    
    <p class="breakhere"></p>
    <div class="Doslinea">
        <div>
            @{
              <div class="datagrid">
                    <table>
                        <thead style="font-size:14px;">
                            <tr>
                                <th>
                                    <p>IMAGENES EQUIPO, MAQUINARIA Y HERRAMIENTAS</p>
                                </th>
                            </tr>
                        </thead>
                        <tbody style="font-size:13px;border:none">
                          <tr style="max-height:200px;border:none">
                                 <td style="text-align:center;border:none">
                                     <img id="img-act1" class="firma-EHM-estilo imagenEHM" src="@ViewBag.Imagen1R" alt="" style="cursor:pointer;border:none" />
                                </td>
                          </tr>
                            <tr style="max-height:200px;border:none">
                                <td style="text-align:center;border:none">
                                    <img id="img-act2" class="firma-EHM-estilo imagenEHM" src="@ViewBag.Imagen2R" alt="" style="cursor:pointer;border:none" />
                                </td>
                            </tr>
                            <tr style="max-height:200px;border:none">
                                <td style="text-align:center;border:none">
                                    <img id="img-act3" class="firma-EHM-estilo imagenEHM" src="@ViewBag.Imagen3R" alt="" style="cursor:pointer;border:none" />
                                </td>
                            </tr>
                            <tr style="max-height:200px;border:none">
                                <td style="text-align:center;border:none">
                                    <img id="img-act4" class="firma-EHM-estilo imagenEHM" src="@ViewBag.Imagen4R" alt="" style="cursor:pointer;border:none" />
                                </td>
                            </tr>
                            <tr style="max-height:200px;border:none">
                                <td style="text-align:center;border:none">
                                    <img id="img-act5" class="firma-EHM-estilo imagenEHM" src="@ViewBag.Imagen5R" alt="" style="cursor:pointer;border:none" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</body>
</html>

