                            </div>
                        }

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-md-8">Descripción Tipo Inspección:</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => Model.DescribeInspeccion, new { @class = "form-control", @style = "color:#7E8A97" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-md-12">Seleccionar Sede a Inspeccionar:</label>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.idSede, Model.Sedes, "--Seleccione Sede--", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
