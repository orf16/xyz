@{@model SG_SST.Models.Participacion.CopasstVM
    ViewBag.Title = "Comite Copasst";
}
@section Scripts {
    @Scripts.Render("~/bundles/Participacion")
}



<style>
    .container-main {
        margin: 60px auto;
        margin-bottom: 10%;
        padding-bottom: 3em;
        width: 100%;
        min-width: 320px;
        max-width: 90%;
        -webkit-box-shadow: 8px 10px 5px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 8px 8px 5px 0px rgba(0,0,0,0.75);
        box-shadow: 8px 8px 5px 0px rgba(0,0,0,0.75);
        background-color: white;
    }

        .container-main h4 {
            font-size: 23px;
            text-shadow: 4px 4px 5px #DDD;
            padding-top: 1%;
            padding-bottom: 2%;
        }


    .box h3 {
        text-align: center;
        position: relative;
        font-family: Arial;
        color: white;
        padding-bottom: 30px;
        top: 50px;
    }

    .box {
        width: 100%;
        height: 320px;
        background: #7E8A97;
        margin: 40px auto;
    }


    /*==================================================
    * Efecto 2
    * ===============================================*/
    .effect2 {
        position: relative;
    }

        .effect2:before, .effect2:after {
            z-index: -1;
            position: absolute;
            content: "";
            bottom: 15px;
            left: 10px;
            width: 50%;
            top: 80%;
            max-width: 300px;
            background: #777;
            -webkit-box-shadow: 0 15px 10px #777;
            -moz-box-shadow: 0 15px 10px #777;
            box-shadow: 0 15px 10px #777;
            -webkit-transform: rotate(-3deg);
            -moz-transform: rotate(-3deg);
            -o-transform: rotate(-3deg);
            -ms-transform: rotate(-3deg);
            transform: rotate(-3deg);
        }

        .effect2:after {
            -webkit-transform: rotate(3deg);
            -moz-transform: rotate(3deg);
            -o-transform: rotate(3deg);
            -ms-transform: rotate(3deg);
            transform: rotate(3deg);
            right: 10px;
            left: auto;
        }

        h5{
            color:white;
            padding-top:0.5em;
        } 
</style>

<link href="~/Content/Site.css" rel="stylesheet" />
<!-- Bootstrap core CSS -->
<link href="~/Content/miga-de-pan.css" rel="stylesheet">
<!-- Referencia a botones -->
<link rel="stylesheet" href="~/Content/css/specialbuttons.css">

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Participación Trabajadores</a></li>
    <li><a href="javascript:void(0)">Comités en SST</a></li>
    <li class="active">Copasst</li>
</ol>
<hr />
<div class="panel panel-default" style="background-color: rgba(196, 202,196, 0.1)">
    <div class="panel-heading" style="color:white">Copasst</div>
    <!-- Botón Ayuda -->
    <div align="right">
        <div id="ayuda" style="text-align:right">
            <a href="" data-toggle="modal" data-target="#@string.Format("modalAyuda")"
               title="Ayuda" class="btn btn-ayuda btn-md">
                <i class="glyphicon glyphicon-question-sign"></i>
            </a>
            <div id="@string.Format("modalAyuda")" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header encabezado" style="background-color:transparent; border-bottom:none">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                @*<span aria-hidden="true">&times;</span>*@
                            </button>
                            <h4 class="modal-title title">Información de Ayuda/Acta Copasst</h4>
                        </div>
                        <div class="modal-body " style="color:black">

                            <p style="margin-bottom:20px;line-height: 200%;text-align:left;">Para crear un <strong>ACTA COPASST</strong>, seleccione una Sede y presione <button class="boton botonactive">Continuar</button> </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="boton botoncancel" data-dismiss="modal">Salir</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <form action="@Url.Action("HistoricoActaCopasst")" id="formActaC">
            <div class="panel-body form-horizontal">
                <div style="background-color:transparent">
                    <div class="row">
                        <div class="col-md-7" align="center">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h4 class="col-md-12 col-lg-offset-1">Sede:</h4>
                                    </div>
                                    <div class="col-lg-9">
                                        @Html.DropDownListFor(model => model.idSede, Model.Sedes, "---Seleccionar Sede---", new { @class = "form-control", @onchange = "BuscarInformacionSede()" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-10 col-lg-offset-1">
                            <div class="form-group">
                                <h4 class="col-md-7 col-lg-offset-0" id="labelinfosede">Información Sede Seleccionada:</h4>
                                <div class="box effect2" id="infosede">
                                    <div class="col-lg-12">
                                        <input type="hidden" value="@Model.idSede" />
                                        <h5>NOMBRE EMPRESA:</h5>@Html.TextBoxFor(model => model.NombreEmpresaVM, new { @class = "form-control", @readonly = "readonly", @style = "color: #3d4e5a" })
                                        <h5>NIT:</h5>@Html.TextBoxFor(model => model.NitEmpresaVM, new { @class = "form-control", @readonly = "readonly", @style = "color: #3d4e5a" })
                                        <h5>SEDE:</h5>@Html.TextBoxFor(model => model.NombreSedeVM, new { @class = "form-control", @readonly = "readonly", @style = "color: #3d4e5a" })
                                        <h5>DIRECCIÓN SEDE:</h5>@Html.TextBoxFor(model => model.DireccionSedeVM, new { @class = "form-control", @readonly = "readonly", @style = "color: #3d4e5a" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-6 col-md-offset-9">
                             <button type="submit" id="Continuar" class="boton botonactive">Continuar</button>
                        </div>
                    </div>
                </div>

            </div>
        </form>




























</div>
