                            <div class="col-md-10">
                                <input name="Otro" type="text" class="form-control" value="@Model.Otro" />
                            </div>
                        </div>
                        <br />
                        <div class="row" id="inputClasificacion">
                            <div class="col-md-2">
                                <h5><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_descripcion:</b></h5>
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownList("FK_Clasificacion_De_Peligro", null, htmlAttributes: new { @class = "form-control", @onchange = "insertarClasesPeligros()" }, optionLabel: "Seleccionar")
                                <input type="hidden" id="clasificacionPeligros" value="@Model.idDescripcion" />
