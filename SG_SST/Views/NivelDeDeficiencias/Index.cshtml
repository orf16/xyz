@model IEnumerable<SG_SST.Models.Planificacion.NivelDeDeficiencia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Niveles De Deficiencias</h2>

<p>
    @Html.ActionLink(SG_SST.Recursos.GeneralApp.General.btn_crear_nuevo, "Create", null,
            htmlAttributes: new { @type = "button", @class = "btn btn-success btn-xs" })
</p>
<table class="table table-condensed table-responsive table-hover table-bordered">
    <tr class="titulos_tabla">
        <th>
           Cuantitativa
        </th>       
        <th>
            Valor de la Deficiencia
        </th>
        <th>
           Detalle de la Deficiencia
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FLAG_Cuantitativa)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Deficiencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion_Deficiciencia)
            </td>
            <td>
                @Html.ActionLink(SG_SST.Recursos.GeneralApp.General.btn_editar, "Edit", new { id = item.PK_Nivel_De_Deficiencia }
              , htmlAttributes: new { @type = "button", @class = "btn btn-warning btn-xs jh" })
                @Html.ActionLink(SG_SST.Recursos.GeneralApp.General.btn_Eliminar, "Delete", new { id = item.PK_Nivel_De_Deficiencia }
             , htmlAttributes: new { @type = "button", @class = "btn btn-danger btn-xs jh" })
            </td>
        </tr>
    }

</table>
