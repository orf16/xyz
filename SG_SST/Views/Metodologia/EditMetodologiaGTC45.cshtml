                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <h5><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_step_trabajador:</b></h5>
                            </div>
                            <div class="col-md-8">
                                <textarea id="Trabajador" name="Accion_De_Prevencion" class="form-control" style="resize:none" rows="3" cols="7">@Model.Trabajador</textarea>
                            </div>
                        </div>
                        <hr />
                        <div class="row" style="margin-bottom:20px">
                            <div class="col-md-2">
                                <button type="button" class="boton botoninfo pull-left" onclick="AnteriorPanel(1)">
                                    <span class="glyphicon glyphicon-chevron-left"></span> Anterior
                                </button>
                                @*<a onclick="AnteriorPanel(1)" class=" btn btn-siguiente btn-md tbr pull-left">
                                        <span class="glyphicon glyphicon-chevron-left"> Anterior</span>
                                    </a>*@
                            </div>
                            <div class="col-md-8">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="boton botoninfo pull-right" onclick="validarCamposInformacioGeneral(3, true)">
                                    @SG_SST.Recursos.GeneralApp.General.btn_siguiente <span class="glyphicon glyphicon-chevron-right"></span>
                                </button>
                                @*<a onclick="validarCamposInformacioGeneral(3, true)" value="@SG_SST.Recursos.GeneralApp.General.btn_siguiente" class=" btn btn-siguiente btn-md tbr pull-right">
                                        Siguiente <span class="glyphicon glyphicon-chevron-right"></span>
                                    </a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>

