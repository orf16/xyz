                                <h2>Código</h2>
                                @if (Model.CodActividadEconomica < 1)
                                {
                                    @Html.TextBoxFor(x => x.CodActividadEconomica, new { @id = "codactividad", @name = "codactividad" })
                                }
                                else
                                {
