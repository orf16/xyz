@model SG_SST.Models.Participacion.TipoPrincipalActa

@{
    ViewBag.Title = "Editar Tipo de Principales Miembros Comites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<!-- Bootstrap core CSS -->
<link href="~/Content/miga-de-pan.css" rel="stylesheet">
<!-- Referencia a botones -->
<link rel="stylesheet" href="~/Content/css/specialbuttons.css">

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Configuración Maestros</a></li>
    <li><a href="javascript:void(0)">Tipos de Principales Miembros Comites</a></li>
    <li class="active">Editar Tipo de Principales Miembros Comites</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tipo de Principales Miembros Comites</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PK_Id_TipoPrincipal)

        <div class="form-group">
            <div class="col-md-2">
                <label class="control-label">Tipo de Principal</label>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.DescripcionTipoPrincipal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescripcionTipoPrincipal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <button type="submit" class="boton botonactive">Guardar</button> 
                |
                <a href="@Url.Action("Index")" class="boton botoninfo">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
}
