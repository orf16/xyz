@model SG_SST.Models.Planificacion.ValoracionFinalModel
<div class="calficacion-final-estmin">
    <div class="row form-group">
        <div class="cal_actual">
            <h4>La Calificación Actual de su Diagnóstico es</h4>
            <div class="row row-centered form-group">
                <div class="col-xs-3">
                    <button type="button" class="cal_par btn btn-default btn-lg inner-calf-fin-estmin">CRITERIO <br />@Model.CriterioValoracion</button>
                </div>
                <div class="col-xs-4">
                    <button type="button" class="cal_par btn btn-default btn-lg inner-calf-fin-estmin">VALORACIÓN <br />@Model.Valoracion</button>
                </div>
                <div class="col-xs-4">
                    <textarea class="form-control" rows="3" style="height:100px; margin-left: 35px; resize:none" readonly>ACCIÓN: @Model.Accion</textarea>
                </div>
                @*<button type="button" class="cal_par btn btn-default btn-lg">ACCIÓN <br />@Model.Accion</button>*@
            </div>
        </div>
        <div class="row row-centered form-group">
            <div class="col-xs-6">
                <button id="_planAccion" type="button" class="boton botoninfo">
                    Plan de Acción
                    @*<span class="glyphicon glyphicon-save" aria-hidden="true"></span>*@
                </button>
            </div>
            <div class="informe_final col-xs-5">
                <button id="inf_final" type="button" class="boton botoninfo">
                    Informe Final
                    @*<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>*@
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="PlanAccionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header cabecera">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="modal-body" id="containeplanaccion" >

                </div>
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        <a class="boton botoninfo" href="../EvaluacionEstandarMinimo/DescargarPlanAccionExccel">Descargar Excel</a>
                        @*<button id="descargarExcel" type="button" class="agr_aspec btn btn-default">
                    Descargar Excel
                </button>*@
                    </div>
                    <div class="col-xs-4">
                        <a class="boton botoninfo" href="../EvaluacionEstandarMinimo/DescargarPlanAccionPDF">Descargar PDF</a>
                        @*<button id="descargarPdf" type="button" class="agr_aspec btn btn-default">
                    Descargar PDF
                </button>*@
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="boton botoncancel" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

