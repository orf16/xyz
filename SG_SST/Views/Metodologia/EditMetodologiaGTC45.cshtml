                                <h5><b>@SG_SST.Recursos.Planificacion.PlanificacionMod.nombre_lbl_step_tarea:</b></h5>
                            </div>
                            <div class="col-md-8">
                                <input type="text" name="Tarea" class="form-control" value="@Model.Tarea" />
                            </div>
                        </div>
                        <div class="row">
