@model SG_SST.Models.ReporteIncidente.IncidenteModel
@{
    ViewBag.Title = "Reporte de Incidentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ThisController = ViewContext.Controller as SG_SST.Controllers.Empresas.IncidenteController;
}
@section HeadStyles{
    <link rel="stylesheet" href="/Content/css/formularios.css" />
    <link rel="stylesheet" href="/Content/css/bootstrap-iso.css" />
